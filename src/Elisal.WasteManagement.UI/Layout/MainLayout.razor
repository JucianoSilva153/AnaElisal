@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject Elisal.WasteManagement.UI.Services.LocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider

<!-- Layout Wrapper -->
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar Navigation -->
    <aside
        class="w-64 flex-shrink-0 border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 flex flex-col justify-between">
        <div class="flex flex-col gap-6 p-6">
            <div class="flex items-center gap-3">
                <div class="bg-primary p-2 rounded-lg text-white">
                    <span class="material-symbols-outlined block">recycling</span>
                </div>
                <div>
                    <h1 class="text-lg font-bold leading-none text-slate-900 dark:text-white">ELISAL SGRS</h1>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Gestão de Resíduos</p>
                </div>
            </div>
            <nav class="flex flex-col gap-1">
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors text-slate-600 dark:text-slate-400 font-medium"
                   href="/">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm">Dashboard</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                   href="/residuos">
                    <span class="material-symbols-outlined">delete_sweep</span>
                    <span class="text-sm">Recolhas</span>
                </a>
                <AuthorizeView Roles="Admin,Manager">
                    <button @onclick="() => _wasteTypeModal.Show()" class="flex items-center gap-3 w-full px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors pl-8 text-xs">
                        <span class="material-symbols-outlined text-sm">category</span>
                        <span>Tipos de Resíduos</span>
                    </button>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                       href="/cooperativas">
                        <span class="material-symbols-outlined">storefront</span>
                        <span class="text-sm">Cooperativas</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                       href="/transacoes">
                        <span class="material-symbols-outlined">payments</span>
                        <span class="text-sm">Transações</span>
                    </a>
                </AuthorizeView>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                   href="/pontos-recolha">
                    <span class="material-symbols-outlined">location_on</span>
                    <span class="text-sm">Pontos de Coleta</span>
                </a>
                <AuthorizeView Roles="Admin,Manager">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                       href="/relatorios">
                        <span class="material-symbols-outlined">description</span>
                        <span class="text-sm">Relatórios</span>
                    </a>
                </AuthorizeView>
                <AuthorizeView Roles="Admin,Manager,Driver,Citizen">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                       href="/rotas">
                        <span class="material-symbols-outlined">alt_route</span>
                        <span class="text-sm">Rotas</span>
                    </a>
                </AuthorizeView>

                <AuthorizeView Roles="Admin">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                       href="/usuarios">
                        <span class="material-symbols-outlined">group</span>
                        <span class="text-sm">Utilizadores</span>
                    </a>
                </AuthorizeView>

                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors border-t border-slate-100 dark:border-slate-800"
                   href="/perfil">
                    <span class="material-symbols-outlined font-light">account_circle</span>
                    <span class="text-sm">O Meu Perfil</span>
                </a>
            </nav>
        </div>
        <div class="p-4 border-t border-slate-200 dark:border-slate-800">
            <AuthorizeView>
                <Authorized>
                    <div class="flex items-center gap-3 px-2">
                        <div class="size-10 rounded-full bg-primary flex items-center justify-center text-white font-bold">
                            @context.User.Identity?.Name?[0].ToString().ToUpper()
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-semibold truncate">@context.User.Identity?.Name</p>
                            <button @onclick="Logout" class="text-[10px] text-red-500 font-bold uppercase hover:underline">Sair do Sistema</button>
                        </div>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </aside>
    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col overflow-y-auto">
        <!-- Top Navigation Bar -->
        <header
            class="sticky top-0 z-10 flex items-center justify-between px-8 py-4 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800">
            <div class="flex items-center gap-4 flex-1 max-w-xl">
                <div class="relative w-full">
                    <span
                        class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-xl">
                        search
                    </span>
                    <input
                        class="w-full pl-10 pr-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 focus:ring-2 focus:ring-primary focus:border-primary text-sm transition-all outline-none"
                        placeholder="Pesquisar registros, frotas ou alertas..." type="text"/>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <NotificationBell/>
                <button
                    class="p-2 text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors">
                    <span class="material-symbols-outlined">dark_mode</span>
                </button>
                <AuthorizeView Roles="Admin,Manager,Driver">
                    <button @onclick="() => _recolhaModal.Show()"
                            class="px-4 py-2 bg-primary hover:bg-primary/90 text-white rounded-lg text-sm font-semibold transition-colors flex items-center gap-2">
                        <span class="material-symbols-outlined text-lg">add_circle</span>
                        Nova Coleta
                    </button>
                </AuthorizeView>
            </div>
        </header>
        @Body

        <Elisal.WasteManagement.UI.Components.Modals.RecolhaModal @ref="_recolhaModal" NavigateOnSuccess="true"/>
        <Elisal.WasteManagement.UI.Components.Modals.WasteTypeManagementModal @ref="_wasteTypeModal"/>
        <!-- Footer -->
        <footer
            class="mt-auto py-6 px-8 text-center text-slate-400 text-xs border-t border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900">
            <p>© 2026 ELISAL SGRS - Sistema de Gestão de Resíduos Sólidos. Luanda, Angola.</p>
        </footer>
    </main>
</div>

<ToastContainer/>

@code {
    private Elisal.WasteManagement.UI.Components.Modals.RecolhaModal _recolhaModal;
    private Elisal.WasteManagement.UI.Components.Modals.WasteTypeManagementModal _wasteTypeModal;

    private async Task Logout()
    {
        await LocalStorage.RemoveItemAsync("authToken");
        await LocalStorage.RemoveItemAsync("refreshToken");
        await LocalStorage.RemoveItemAsync("user");
        await ((Elisal.WasteManagement.UI.Services.ApiAuthenticationStateProvider)AuthStateProvider).MarkUserAsLoggedOut();
        Navigation.NavigateTo("login");
    }

}