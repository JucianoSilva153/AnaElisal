@page "/relatorios"
@attribute [Authorize(Roles = "Admin,Manager")]
@using Elisal.WasteManagement.Application.DTOs
@using Elisal.WasteManagement.Domain.Entities
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>SGR Elisal - Relatórios</PageTitle>

<div class="p-4 sm:p-6 lg:p-8 space-y-6 lg:space-y-8">
    <div>
        <h1 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white">Relatórios</h1>
        <p class="text-slate-500 dark:text-slate-400 text-xs sm:text-sm">Gere relatórios personalizados do sistema</p>
    </div>

    <!-- Report Types Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6">
        @foreach (var tipo in tiposRelatorio)
        {
            <button @onclick="() => SelecionarTipo(tipo)"
                    class="bg-white dark:bg-slate-900 rounded-xl border-2 @(tipoSelecionado == tipo ? "border-primary shadow-md" : "border-slate-200 dark:border-slate-800") p-5 lg:p-6 text-left hover:shadow-lg transition-all group">
                <div class="flex items-start gap-4">
                    <div class="p-2.5 sm:p-3 rounded-lg bg-@tipo.Color-50 dark:bg-@tipo.Color-900/20 text-@tipo.Color-600 dark:text-@tipo.Color-400 group-hover:scale-110 transition-transform flex-shrink-0">
                        <span class="material-symbols-outlined text-2xl sm:text-3xl">@tipo.Icon</span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <h3 class="font-bold text-slate-900 dark:text-white mb-1 text-sm sm:text-base truncate">@tipo.Nome</h3>
                        <p class="text-xs sm:text-sm text-slate-500 dark:text-slate-400 line-clamp-2 sm:line-clamp-none">@tipo.Descricao</p>
                    </div>
                    @if (tipoSelecionado == tipo)
                    {
                        <span class="material-symbols-outlined text-primary text-xl sm:text-2xl flex-shrink-0">check_circle</span>
                    }
                </div>
            </button>
        }
    </div>

    <!-- Configuration Form -->
    @if (tipoSelecionado != null)
    {
        <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-5 lg:p-6 shadow-sm animate-in fade-in slide-in-from-top-4 duration-300">
            <h2 class="text-base sm:text-lg font-bold text-slate-900 dark:text-white mb-6">Configurar Relatório: @tipoSelecionado.Nome</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6 mb-6">
                <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Data Início</label>
                    <input type="date" @bind="dataInicio" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white text-sm focus:ring-primary focus:border-primary"/>
                </div>
                <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Data Fim</label>
                    <input type="date" @bind="dataFim" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white text-sm focus:ring-primary focus:border-primary"/>
                </div>

                @if (tipoSelecionado.Id == "transacoes")
                {
                    <div class="space-y-2 sm:col-span-2">
                        <label class="block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Cooperativa (Opcional)</label>
                        <select @bind="cooperativaId" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white p-2 text-sm focus:ring-primary focus:border-primary">
                            <option value="">Todas</option>
                            @foreach (var coop in cooperativas)
                            {
                                <option value="@coop.Id">@coop.Name</option>
                            }
                        </select>
                    </div>
                }

                @if (tipoSelecionado.Id == "operadores")
                {
                    <div class="space-y-2 sm:col-span-2">
                        <label class="block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Operador (Opcional)</label>
                        <select @bind="usuarioId" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white p-2 text-sm focus:ring-primary focus:border-primary">
                            <option value="">Todos</option>
                            @foreach (var user in usuarios)
                            {
                                <option value="@user.Id">@user.Name</option>
                            }
                        </select>
                    </div>
                }
            </div>

            <div class="space-y-2 mb-8">
                <label class="block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Formato de Saída</label>
                <div class="flex gap-6">
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="radio" name="formato" value="pdf" @onchange='() => formato = "pdf"' checked="@(formato == "pdf")" class="text-primary focus:ring-primary h-4 w-4"/>
                        <span class="flex items-center gap-1.5 text-sm text-slate-700 dark:text-slate-300 group-hover:text-primary transition-colors">
                            <span class="material-symbols-outlined text-red-600 text-xl">picture_as_pdf</span> PDF
                        </span>
                    </label>
                    <label class="flex items-center gap-2 cursor-pointer group">
                        <input type="radio" name="formato" value="excel" @onchange='() => formato = "excel"' checked="@(formato == "excel")" class="text-primary focus:ring-primary h-4 w-4"/>
                        <span class="flex items-center gap-1.5 text-sm text-slate-700 dark:text-slate-300 group-hover:text-primary transition-colors">
                            <span class="material-symbols-outlined text-green-600 text-xl">table_view</span> Excel
                        </span>
                    </label>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-end gap-3 pt-6 border-t border-slate-200 dark:border-slate-800">
                <button @onclick="GerarRelatorio" disabled="@isGenerating"
                        class="w-full sm:w-auto px-6 py-2.5 rounded-lg bg-primary hover:bg-primary/90 text-white font-bold flex items-center justify-center gap-2 disabled:opacity-50 shadow-sm transition-all hover:translate-y-[-1px] active:translate-y-0 text-sm">
                    @if (isGenerating)
                    {
                        <span class="animate-spin material-symbols-outlined text-xl">progress_activity</span>
                        <span>Gerando...</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined text-xl">download</span>
                        <span>Gerar Relatório</span>
                    }
                </button>
            </div>
            @if (isGenerating)
            {
                <span class="animate-spin material-symbols-outlined">progress_activity</span>
                <span>Gerando...</span>
            }
            else
            {
                <span class="material-symbols-outlined">download</span>
                <span>Gerar Relatório</span>
            }
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="mt-4 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700 flex items-center gap-3">
                <span class="material-symbols-outlined">error</span>
                <span>@errorMessage</span>
            </div>
        }
    }
</div>

@code {
    private TipoRelatorio tipoSelecionado;
    private DateTime dataInicio = DateTime.Now.AddDays(-30);
    private DateTime dataFim = DateTime.Now;
    private string formato = "pdf";
    private int? cooperativaId;
    private bool isGenerating = false;
    private string errorMessage = "";

    private List<TipoRelatorio> tiposRelatorio = new()
    {
        new() { Id = "producao", Nome = "Produção de Resíduos", Descricao = "Quantidade total coletada por período", Icon = "delete_sweep", Color = "blue" },
        new() { Id = "operadores", Nome = "Operadores / Motoristas", Descricao = "Desempenho individual por operador", Icon = "badge", Color = "orange" },
        new() { Id = "desempenho-ponto", Nome = "Desempenho por Ponto", Descricao = "Análise de performance dos ecopontos", Icon = "analytics", Color = "purple" },
        new() { Id = "transacoes", Nome = "Transações com Cooperativas", Descricao = "Histórico financeiro e parcerias", Icon = "payments", Color = "yellow" }
    };

    private void SelecionarTipo(TipoRelatorio tipo)
    {
        tipoSelecionado = tipo;
        errorMessage = "";
    }

    private async Task GerarRelatorio()
    {
        isGenerating = true;
        errorMessage = "";

        try
        {
            var queryParams = $"inicio={dataInicio:yyyy-MM-dd}&fim={dataFim:yyyy-MM-dd}";
            if (cooperativaId.HasValue) queryParams += $"&coopId={cooperativaId}";
            if (usuarioId.HasValue) queryParams += $"&usuarioId={usuarioId}";

            var url = formato == "pdf"
                ? $"api/relatorios/pdf/{tipoSelecionado.Id}?{queryParams}"
                : $"api/relatorios/excel/{tipoSelecionado.Id}?{queryParams}";

            var response = await Http.GetAsync(url);
            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsByteArrayAsync();
                var fileName = $"relatorio_{tipoSelecionado.Id}_{DateTime.Now:yyyyMMdd}.{(formato == "pdf" ? "pdf" : "xlsx")}";
                var contentType = formato == "pdf" ? "application/pdf" : "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet";

                await JS.InvokeVoidAsync("dashboardCharts.downloadFile", fileName, contentType, content);
            }
            else
            {
                errorMessage = "Erro no servidor ao gerar o relatório.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro técnico: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var coops = await Http.GetFromJsonAsync<List<Cooperative>>("api/cooperativas");
            if (coops != null) cooperativas = coops;

            var users = await Http.GetFromJsonAsync<List<UserDto>>("api/usuarios");
            if (users != null) usuarios = users.OrderBy(u => u.Name).ToList();
        }
        catch
        {
            /* Fallback */
        }
    }

    private List<Cooperative> cooperativas = new();
    private List<UserDto> usuarios = new();
    private int? usuarioId;

    public class TipoRelatorio
    {
        public string Id { get; set; } = "";
        public string Nome { get; set; } = "";
        public string Descricao { get; set; } = "";
        public string Icon { get; set; } = "";
        public string Color { get; set; } = "";
    }

}
