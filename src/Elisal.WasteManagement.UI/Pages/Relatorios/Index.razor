@page "/relatorios"
@attribute [Authorize(Roles = "Admin,Manager")]
@using Elisal.WasteManagement.Application.DTOs
@using Elisal.WasteManagement.Domain.Entities
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>SGR Elisal - Relatórios</PageTitle>

<div class="p-6 lg:p-10 space-y-10 animate-fade-in relative overflow-hidden">
    <div class="absolute top-0 left-0 -translate-y-1/2 -translate-x-1/2 w-96 h-96 bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="relative z-10">
        <h1 class="text-4xl font-black text-slate-900 dark:text-white leading-tight">
            Central de <span class="text-gradient-green">Inteligência</span>
        </h1>
        <p class="text-slate-500 font-medium mt-2">Geração de relatórios analíticos e exportação de dados operacionais.</p>
    </div>

    <!-- Report Types Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 relative z-10">
        @foreach (var tipo in tiposRelatorio)
        {
            <button @onclick="() => SelecionarTipo(tipo)"
                    class="group bg-white dark:bg-slate-900 rounded-3xl border-2 transition-all p-8 text-left hover-premium @(tipoSelecionado == tipo ? "border-primary shadow-premium ring-4 ring-primary/5 scale-[1.02]" : "border-slate-50 dark:border-slate-800 shadow-sm hover:border-primary/20") relative overflow-hidden">

                @if (tipoSelecionado == tipo)
                {
                    <div class="absolute top-0 right-0 p-2">
                        <span class="material-symbols-outlined text-primary text-2xl font-bold animate-fade-in">check_circle</span>
                    </div>
                }

                <div class="size-16 rounded-2xl bg-slate-50 dark:bg-slate-800 flex items-center justify-center mb-6 group-hover:bg-primary-subtle transition-colors shadow-inner">
                    <span class="material-symbols-outlined text-4xl text-@tipo.Color-500 font-bold group-hover:scale-110 transition-transform">@tipo.Icon</span>
                </div>

                <h3 class="font-black text-slate-900 dark:text-white mb-2 text-lg leading-tight uppercase tracking-tight">@tipo.Nome</h3>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest leading-relaxed">@tipo.Descricao</p>
            </button>
        }
    </div>

    <!-- Configuration Form -->
    @if (tipoSelecionado != null)
    {
        <div class="bg-white dark:bg-slate-900 rounded-[2.5rem] shadow-premium border border-slate-50 dark:border-slate-800 p-10 lg:p-12 relative z-10 animate-fade-in">
            <div class="flex items-center gap-4 mb-10 border-l-4 border-primary pl-6">
                <div>
                    <span class="text-[10px] font-black text-primary uppercase tracking-[0.2em]">Configuração do Relatório</span>
                    <h2 class="text-2xl font-black text-slate-900 dark:text-white uppercase tracking-tight mt-1">@tipoSelecionado.Nome</h2>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
                <div class="space-y-3">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Início do Período</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">calendar_today</span>
                        <input type="date" @bind="dataInicio" class="w-full h-14 pl-12 pr-4 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-4 focus:ring-primary/10 focus:border-primary font-bold transition-all"/>
                    </div>
                </div>
                <div class="space-y-3">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Fim do Período</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">event</span>
                        <input type="date" @bind="dataFim" class="w-full h-14 pl-12 pr-4 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-4 focus:ring-primary/10 focus:border-primary font-bold transition-all"/>
                    </div>
                </div>

                @if (tipoSelecionado.Id == "transacoes")
                {
                    <div class="space-y-3 md:col-span-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Filtrar por Cooperativa</label>
                        <select @bind="cooperativaId" class="w-full h-14 px-6 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-4 focus:ring-primary/10 focus:border-primary font-bold transition-all appearance-none cursor-pointer">
                            <option value="">Todas as Cooperativas Registadas</option>
                            @foreach (var coop in cooperativas)
                            {
                                <option value="@coop.Id">@coop.Name</option>
                            }
                        </select>
                    </div>
                }

                @if (tipoSelecionado.Id == "operadores")
                {
                    <div class="space-y-3 md:col-span-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Seleção de Operador</label>
                        <select @bind="usuarioId" class="w-full h-14 px-6 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-4 focus:ring-primary/10 focus:border-primary font-bold transition-all appearance-none cursor-pointer">
                            <option value="">Visualizar Todos os Operadores</option>
                            @foreach (var user in usuarios)
                            {
                                <option value="@user.Id">@user.Name</option>
                            }
                        </select>
                    </div>
                }
            </div>

            <div class="space-y-4 mb-12">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Formato de Exportação</label>
                <div class="flex flex-wrap gap-6">
                    <label class="flex items-center gap-4 cursor-pointer group p-4 rounded-2xl border border-slate-50 dark:border-slate-800 hover:bg-slate-50 transition-all bg-white dark:bg-slate-900">
                        <input type="radio" name="formato" value="pdf" @onchange='() => formato = "pdf"' checked="@(formato == "pdf")" class="text-primary focus:ring-primary h-5 w-5"/>
                        <span class="flex items-center gap-3">
                            <span class="size-10 rounded-xl bg-red-50 flex items-center justify-center">
                                <span class="material-symbols-outlined text-red-600 font-bold">picture_as_pdf</span>
                            </span>
                            <span class="text-sm font-black text-slate-700 dark:text-slate-300 uppercase tracking-widest">Documento PDF</span>
                        </span>
                    </label>
                    <label class="flex items-center gap-4 cursor-pointer group p-4 rounded-2xl border border-slate-50 dark:border-slate-800 hover:bg-slate-50 transition-all bg-white dark:bg-slate-900">
                        <input type="radio" name="formato" value="excel" @onchange='() => formato = "excel"' checked="@(formato == "excel")" class="text-primary focus:ring-primary h-5 w-5"/>
                        <span class="flex items-center gap-3">
                            <span class="size-10 rounded-xl bg-green-50 flex items-center justify-center">
                                <span class="material-symbols-outlined text-green-600 font-bold">table_view</span>
                            </span>
                            <span class="text-sm font-black text-slate-700 dark:text-slate-300 uppercase tracking-widest">Planilha EXCEL</span>
                        </span>
                    </label>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-between gap-6 pt-10 border-t border-slate-50 dark:border-slate-800">
                <div class="flex items-center gap-3 text-slate-400">
                    <span class="material-symbols-outlined font-bold">info</span>
                    <p class="text-[10px] font-bold uppercase tracking-widest">A geração pode levar alguns segundos dependendo do volume de dados.</p>
                </div>
                <button @onclick="GerarRelatorio" disabled="@isGenerating"
                        class="btn-vibrant px-12 py-4 flex items-center gap-3 shadow-green-glow disabled:opacity-50 disabled:translate-y-0 group">
                    @if (isGenerating)
                    {
                        <div class="size-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                        <span class="font-black uppercase tracking-[0.2em]">PROCESSANDO...</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined font-bold group-hover:animate-bounce">download</span>
                        <span class="font-black uppercase tracking-[0.2em]">GERAR DISPONÍVEL</span>
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="mt-8 p-6 rounded-3xl bg-red-50 dark:bg-red-900/10 border border-red-100 dark:border-red-900/20 text-red-600 flex items-center gap-4 animate-fade-in">
                <span class="material-symbols-outlined font-bold text-3xl">error_outline</span>
                <div>
                    <p class="text-xs font-black uppercase tracking-widest">Falha na Operação</p>
                    <p class="text-sm font-bold">@errorMessage</p>
                </div>
            </div>
        }
    }
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="mt-4 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700 flex items-center gap-3">
        <span class="material-symbols-outlined">error</span>
        <span>@errorMessage</span>
    </div>
}



@code {
    private TipoRelatorio tipoSelecionado;
    private DateTime dataInicio = DateTime.Now.AddDays(-30);
    private DateTime dataFim = DateTime.Now;
    private string formato = "pdf";
    private int? cooperativaId;
    private bool isGenerating = false;
    private string errorMessage = "";

    private List<TipoRelatorio> tiposRelatorio = new()
    {
        new() { Id = "producao", Nome = "Produção de Resíduos", Descricao = "Quantidade total coletada por período", Icon = "delete_sweep", Color = "blue" },
        new() { Id = "operadores", Nome = "Operadores / Motoristas", Descricao = "Desempenho individual por operador", Icon = "badge", Color = "orange" },
        new() { Id = "desempenho-ponto", Nome = "Desempenho por Ponto", Descricao = "Análise de performance dos ecopontos", Icon = "analytics", Color = "purple" },
        new() { Id = "transacoes", Nome = "Transações com Cooperativas", Descricao = "Histórico financeiro e parcerias", Icon = "payments", Color = "yellow" }
    };

    private void SelecionarTipo(TipoRelatorio tipo)
    {
        tipoSelecionado = tipo;
        errorMessage = "";
    }

    private async Task GerarRelatorio()
    {
        isGenerating = true;
        errorMessage = "";

        try
        {
            var queryParams = $"inicio={dataInicio:yyyy-MM-dd}&fim={dataFim:yyyy-MM-dd}";
            if (cooperativaId.HasValue) queryParams += $"&coopId={cooperativaId}";
            if (usuarioId.HasValue) queryParams += $"&usuarioId={usuarioId}";

            var url = formato == "pdf"
                ? $"api/relatorios/pdf/{tipoSelecionado.Id}?{queryParams}"
                : $"api/relatorios/excel/{tipoSelecionado.Id}?{queryParams}";

            var response = await Http.GetAsync(url);
            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsByteArrayAsync();
                var fileName = $"relatorio_{tipoSelecionado.Id}_{DateTime.Now:yyyyMMdd}.{(formato == "pdf" ? "pdf" : "xlsx")}";
                var contentType = formato == "pdf" ? "application/pdf" : "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet";

                await JS.InvokeVoidAsync("dashboardCharts.downloadFile", fileName, contentType, content);
            }
            else
            {
                errorMessage = "Erro no servidor ao gerar o relatório.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro técnico: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var coops = await Http.GetFromJsonAsync<List<Cooperative>>("api/cooperativas");
            if (coops != null) cooperativas = coops;

            var users = await Http.GetFromJsonAsync<List<UserDto>>("api/usuarios");
            if (users != null) usuarios = users.OrderBy(u => u.Name).ToList();
        }
        catch
        {
            /* Fallback */
        }
    }

    private List<Cooperative> cooperativas = new();
    private List<UserDto> usuarios = new();
    private int? usuarioId;

    public class TipoRelatorio
    {
        public string Id { get; set; } = "";
        public string Nome { get; set; } = "";
        public string Descricao { get; set; } = "";
        public string Icon { get; set; } = "";
        public string Color { get; set; } = "";
    }

}
