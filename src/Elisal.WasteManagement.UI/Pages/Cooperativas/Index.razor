@page "/cooperativas"
@inject HttpClient Http
@using Elisal.WasteManagement.Domain.Entities
@using Elisal.WasteManagement.UI.Components.Modals

<PageTitle>SGR Elisal - Cooperativas</PageTitle>

<div class="p-6 lg:p-10 space-y-10 animate-fade-in">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
        <div>
            <h1 class="text-4xl font-black text-slate-900 dark:text-white leading-tight">
                Gestão de <span class="text-gradient-green">Cooperativas</span>
            </h1>
            <p class="text-slate-500 font-medium mt-2">Parceiros estratégicos de reciclagem e tratamento de resíduos.</p>
        </div>
        <button @onclick="() => _coopModal.Show()" class="btn-vibrant px-8 py-3 flex items-center gap-3 shadow-green-glow">
            <span class="material-symbols-outlined font-bold">add_business</span>
            NOVA COOPERATIVA
        </button>
    </div>

    @if (coops == null)
    {
        <div class="flex flex-col items-center justify-center py-24 gap-4">
            <div class="size-16 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
            <p class="text-slate-400 font-black uppercase tracking-widest text-xs animate-pulse">Sincronizando Parceiros...</p>
        </div>
    }
    else if (coops.Count == 0)
    {
        <div class="bg-white dark:bg-slate-900 rounded-3xl p-20 flex flex-col items-center justify-center text-center space-y-6 border border-dashed border-slate-200 dark:border-slate-800 shadow-sm transition-all hover:border-primary/30">
            <div class="size-24 bg-slate-50 dark:bg-slate-800 rounded-full flex items-center justify-center text-slate-300">
                <span class="material-symbols-outlined text-6xl">storefront</span>
            </div>
            <div>
                <h3 class="text-xl font-black text-slate-900 dark:text-white uppercase tracking-tight">Sem Cooperativas</h3>
                <p class="text-slate-500 font-medium max-w-sm mx-auto mt-2">Nenhum parceiro registado no sistema. Comece a colaborar hoje mesmo!</p>
            </div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var c in coops)
            {
                <div class="bg-white dark:bg-slate-900 rounded-3xl shadow-premium border border-slate-50 dark:border-slate-800 p-8 hover-premium transition-all relative overflow-hidden group">
                    <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-all transform translate-y-2 group-hover:translate-y-0">
                        <button class="size-10 flex items-center justify-center bg-white dark:bg-slate-800 text-slate-400 hover:text-primary hover:shadow-premium rounded-xl transition-all">
                            <span class="material-symbols-outlined text-lg font-bold">edit</span>
                        </button>
                    </div>

                    <div class="flex items-center gap-5 mb-8">
                        <div class="size-14 rounded-2xl bg-gradient-elisal text-white flex items-center justify-center shadow-green-glow">
                            <span class="material-symbols-outlined text-3xl font-bold">recycling</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h3 class="font-black text-slate-900 dark:text-white text-xl leading-none truncate uppercase tracking-tight">@c.Name</h3>
                            <p class="text-[10px] font-black text-slate-400 flex items-center gap-1 mt-2 uppercase tracking-widest leading-none">
                                <span class="material-symbols-outlined text-sm font-bold text-primary">location_on</span> @c.Address
                            </p>
                        </div>
                    </div>

                    <div class="space-y-4 mb-8">
                        <div class="flex items-center gap-3 p-3 bg-slate-50 dark:bg-slate-800/50 rounded-2xl border border-slate-50 dark:border-transparent">
                            <span class="material-symbols-outlined text-primary text-xl font-bold">person</span>
                            <span class="text-sm font-bold text-slate-600 dark:text-slate-300">@c.Contact</span>
                        </div>
                        <div class="flex items-center gap-3 p-3 bg-slate-50 dark:bg-slate-800/50 rounded-2xl border border-slate-50 dark:border-transparent overflow-hidden">
                            <span class="material-symbols-outlined text-primary text-xl font-bold">mail</span>
                            <span class="text-sm font-bold text-slate-600 dark:text-slate-300 truncate">@c.Email</span>
                        </div>
                    </div>

                    <div class="mb-8">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 border-l-2 border-primary pl-2">Fluxos de Resíduos</p>
                        <div class="flex flex-wrap gap-2">
                            @if (!string.IsNullOrEmpty(c.AcceptedWasteTypes))
                            {
                                @foreach (var type in c.AcceptedWasteTypes.Split(','))
                                {
                                    <span class="px-3 py-1.5 rounded-xl bg-white dark:bg-slate-800 text-slate-600 dark:text-slate-300 text-[10px] font-black uppercase tracking-tighter border border-slate-100 dark:border-slate-700 shadow-sm">@type.Trim()</span>
                                }
                            }
                            else
                            {
                                <span class="text-xs text-slate-400 font-bold italic">Nenhum definido</span>
                            }
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-6 border-t border-slate-50 dark:border-slate-800">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Total Valorizado</p>
                            <p class="text-2xl font-black text-slate-900 dark:text-white">0 <span class="text-xs font-bold text-slate-400">KZ</span></p>
                        </div>
                        <button @onclick="() => _transacaoModal.Show(c.Id, c.Name)" class="px-5 py-2.5 bg-primary-subtle text-primary rounded-xl text-xs font-black uppercase tracking-widest hover:bg-primary hover:text-white transition-all shadow-sm">
                            PAGAMENTO
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<NovaCooperativaModal @ref="_coopModal" OnSaved="LoadData"/>
<NovaTransacaoModal @ref="_transacaoModal" OnSaved="LoadData"/>

@code {
    private List<Cooperative> coops;
    private NovaCooperativaModal _coopModal;
    private NovaTransacaoModal _transacaoModal;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            coops = await Http.GetFromJsonAsync<List<Cooperative>>("api/cooperativas");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            coops = new List<Cooperative>();
        }

        StateHasChanged();
    }

}
