@page "/residuos"
@inject HttpClient Http
@using Elisal.WasteManagement.Domain.Entities
@using Elisal.WasteManagement.UI.Components.Modals

<PageTitle>SGR Elisal - Histórico de Recolhas</PageTitle>

<div class="p-8 space-y-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Consultar Recolhas</h1>
            <p class="text-slate-500 dark:text-slate-400 text-sm">Visualize e exporte o histórico de operações</p>
        </div>
        <div class="flex gap-3">
             <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-600 dark:text-slate-300 text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                <span class="material-symbols-outlined text-lg">picture_as_pdf</span>
                Exportar PDF
            </button>
             <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-600 dark:text-slate-300 text-sm font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                <span class="material-symbols-outlined text-lg">table_view</span>
                Excel
            </button>
            <button @onclick="() => _modal.Show()" class="flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg text-sm font-medium hover:bg-primary/90 transition-colors shadow-sm">
                <span class="material-symbols-outlined text-lg">add</span>
                Nova Recolha
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white dark:bg-slate-900 p-4 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="space-y-1">
                <label class="text-xs font-semibold text-slate-500 uppercase">Data Início</label>
                <input type="date" @bind="filters.StartDate" class="w-full text-sm rounded-lg border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" />
            </div>
            <div class="space-y-1">
                <label class="text-xs font-semibold text-slate-500 uppercase">Data Fim</label>
                <input type="date" @bind="filters.EndDate" class="w-full text-sm rounded-lg border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" />
            </div>
            <div class="space-y-1">
                <label class="text-xs font-semibold text-slate-500 uppercase">Ponto / Município</label>
                <input type="text" placeholder="Buscar..." class="w-full text-sm rounded-lg border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" />
            </div>
            <div class="flex items-end">
                <button @onclick="LoadData" class="w-full py-2 bg-slate-900 dark:bg-slate-700 text-white rounded-lg text-sm font-medium hover:bg-slate-800 dark:hover:bg-slate-600 transition-colors">
                    Filtrar Resultados
                </button>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50 dark:bg-slate-800/50 text-slate-500 dark:text-slate-400 text-xs font-semibold uppercase tracking-wider border-b border-slate-200 dark:border-slate-800">
                    <tr>
                        <th class="px-6 py-4 cursor-pointer hover:text-primary">Data/Hora <span class="material-symbols-outlined text-xs align-middle">unfold_more</span></th>
                        <th class="px-6 py-4">Ponto de Recolha</th>
                        <th class="px-6 py-4">Munícipio</th>
                        <th class="px-6 py-4 cursor-pointer hover:text-primary">Peso (Kg) <span class="material-symbols-outlined text-xs align-middle">unfold_more</span></th>
                        <th class="px-6 py-4 text-right">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-800 text-sm">
                    @if (records == null)
                    {
                        <tr><td colspan="5" class="px-6 py-8 text-center text-slate-500">Carregando dados...</td></tr>
                    }
                    else if (records.Count == 0)
                    {
                        <tr><td colspan="5" class="px-6 py-8 text-center text-slate-500">Nenhum registro encontrado para o filtro selecionado.</td></tr>
                    }
                    else 
                    {
                        @foreach (var r in records)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors group">
                                <td class="px-6 py-4 whitespace-nowrap text-slate-600 dark:text-slate-300">@r.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="px-6 py-4 font-medium text-slate-900 dark:text-white">Ponto #@r.CollectionPointId</td>
                                <td class="px-6 py-4 text-slate-500">-</td>
                                <td class="px-6 py-4 font-bold text-slate-700 dark:text-slate-300">@r.AmountKg.ToString("N2")</td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <button class="p-1.5 text-slate-500 hover:text-primary hover:bg-slate-100 rounded-lg" title="Editar">
                                            <span class="material-symbols-outlined text-lg">edit</span>
                                        </button>
                                        <button class="p-1.5 text-slate-500 hover:text-red-600 hover:bg-red-50 rounded-lg" title="Eliminar">
                                            <span class="material-symbols-outlined text-lg">delete</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="px-6 py-4 border-t border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-900/50 flex items-center justify-between text-xs text-slate-500">
             <span>Mostrando @(records?.Count ?? 0) resultados</span>
            <div class="flex gap-1">
                <button class="px-2 py-1 rounded hover:bg-slate-200 dark:hover:bg-slate-700 disabled:opacity-50" disabled>Anterior</button>
                <button class="px-2 py-1 rounded bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 font-semibold shadow-sm">1</button>
                <button class="px-2 py-1 rounded hover:bg-slate-200 dark:hover:bg-slate-700">2</button>
                <button class="px-2 py-1 rounded hover:bg-slate-200 dark:hover:bg-slate-700">3</button>
                <button class="px-2 py-1 rounded hover:bg-slate-200 dark:hover:bg-slate-700">Próxima</button>
            </div>
        </div>
    </div>
</div>

<RecolhaModal @ref="_modal" OnRecordSaved="LoadData" NavigateOnSuccess="false" />

@code {
    private RecolhaModal _modal;
    private List<CollectionRecord> records;
    private FilterModel filters = new FilterModel();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var query = $"api/residuos/recolhas?dataInicio={filters.StartDate:yyyy-MM-dd}&dataFim={filters.EndDate:yyyy-MM-dd}";
            records = await Http.GetFromJsonAsync<List<CollectionRecord>>(query);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            records = new List<CollectionRecord>();
        }
        StateHasChanged();
    }

    public class FilterModel
    {
        public DateTime StartDate { get; set; } = DateTime.Now.AddDays(-30);
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(1);
    }
}
