@page "/residuos"
@inject HttpClient Http
@using Elisal.WasteManagement.Application.DTOs
@using Elisal.WasteManagement.Domain.Entities
@using Elisal.WasteManagement.UI.Components.Modals

<PageTitle>SGR Elisal - Histórico de Recolhas</PageTitle>

<div class="p-6 lg:p-10 space-y-10 animate-fade-in">
    <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
        <div>
            <h1 class="text-4xl font-black text-slate-900 dark:text-white leading-tight">
                Consultar <span class="text-gradient-green">Recolhas</span>
            </h1>
            <p class="text-slate-500 font-medium mt-2">Visualize e exporte o histórico de operações de resíduos.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <button class="flex items-center justify-center gap-2 px-6 py-3 bg-white dark:bg-slate-900 border border-slate-100 dark:border-slate-800 rounded-2xl text-slate-600 dark:text-slate-300 text-sm font-black hover:shadow-premium transition-all">
                <span class="material-symbols-outlined text-lg font-bold">picture_as_pdf</span>
                <span class="hidden sm:inline">PDF</span>
            </button>
            <button class="flex items-center justify-center gap-2 px-6 py-3 bg-white dark:bg-slate-900 border border-slate-100 dark:border-slate-800 rounded-2xl text-slate-600 dark:text-slate-300 text-sm font-black hover:shadow-premium transition-all">
                <span class="material-symbols-outlined text-lg font-bold">table_view</span>
                <span class="hidden sm:inline">EXCEL</span>
            </button>
            <button @onclick="() => _modal.Show()" class="btn-vibrant px-8 py-3 flex items-center gap-2 shadow-green-glow">
                <span class="material-symbols-outlined font-bold">add</span>
                NOVA RECOLHA
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white dark:bg-slate-900 p-8 rounded-3xl shadow-premium border border-slate-50 dark:border-slate-800">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="space-y-2">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Data Início</label>
                <input type="date" @bind="filters.StartDate" class="w-full h-12 px-4 rounded-xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary font-bold transition-all"/>
            </div>
            <div class="space-y-2">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Data Fim</label>
                <input type="date" @bind="filters.EndDate" class="w-full h-12 px-4 rounded-xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary font-bold transition-all"/>
            </div>
            <div class="space-y-2">
                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Busca Rápida</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-lg">search</span>
                    <input type="text" placeholder="Ponto ou Município..." class="w-full h-12 pl-10 pr-4 rounded-xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary font-bold transition-all"/>
                </div>
            </div>
            <div class="flex items-end">
                <button @onclick="LoadData" class="w-full h-12 bg-slate-900 dark:bg-slate-700 text-white rounded-xl text-sm font-black hover:bg-black dark:hover:bg-slate-600 transition-all uppercase tracking-widest shadow-lg">
                    Aplicar Filtros
                </button>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="bg-white dark:bg-slate-900 rounded-3xl shadow-premium border border-slate-50 dark:border-slate-800 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50 dark:bg-slate-800/50 text-slate-400 text-[10px] font-black uppercase tracking-widest border-b border-slate-100 dark:border-slate-800">
                <tr>
                    <th class="px-8 py-5">Data/Hora</th>
                    <th class="px-8 py-5">Ponto de Recolha</th>
                    <th class="px-8 py-5">Resíduo</th>
                    <th class="px-8 py-5">Município</th>
                    <th class="px-8 py-5">Operador</th>
                    <th class="px-8 py-5">Peso (Kg)</th>
                    <th class="px-8 py-5 text-right">Ações</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-slate-50 dark:divide-slate-800/50 text-sm">
                @if (records == null)
                {
                    <tr>
                        <td colspan="7" class="px-8 py-12 text-center">
                            <div class="flex flex-col items-center gap-2">
                                <div class="size-8 border-2 border-primary border-t-transparent rounded-full animate-spin"></div>
                                <span class="text-slate-400 font-black uppercase tracking-widest text-[10px]">Carregando...</span>
                            </div>
                        </td>
                    </tr>
                }
                else if (records.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="px-8 py-20 text-center">
                            <div class="flex flex-col items-center gap-4">
                                <span class="material-symbols-outlined text-slate-200 text-6xl">database_off</span>
                                <p class="text-slate-400 font-bold uppercase tracking-widest text-xs">Nenhum registro encontrado</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var r in records)
                    {
                        <tr class="hover:bg-primary-subtle/30 transition-colors group">
                            <td class="px-8 py-5 whitespace-nowrap text-slate-500 font-bold">@r.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="px-8 py-5">
                                <span class="font-black text-slate-900 dark:text-white uppercase tracking-tight">@r.CollectionPointName</span>
                            </td>
                            <td class="px-8 py-5">
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var name in (r.WasteTypeNames?.Any() == true ? r.WasteTypeNames : new List<string> { r.WasteTypeName }))
                                    {
                                        <span class="px-3 py-1 bg-white dark:bg-slate-800 text-primary border border-primary/10 rounded-lg text-[10px] font-black uppercase tracking-tighter shadow-sm">@name</span>
                                    }
                                </div>
                            </td>
                            <td class="px-8 py-5 text-slate-500 font-medium italic">@r.Municipality</td>
                            <td class="px-8 py-5">
                                <div class="flex items-center gap-2">
                                    <div class="size-6 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-[10px] font-black text-slate-500">
                                        @r.UserName[0]
                                    </div>
                                    <span class="text-slate-600 dark:text-slate-400 font-bold">@r.UserName</span>
                                </div>
                            </td>
                            <td class="px-8 py-5">
                                <span class="text-lg font-black text-slate-900 dark:text-white">@r.AmountKg.ToString("N1")</span>
                            </td>
                            <td class="px-8 py-5 text-right">
                                <AuthorizeView Roles="Admin,Manager">
                                    <div class="flex items-center justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <button class="size-10 flex items-center justify-center bg-white dark:bg-slate-800 text-slate-400 hover:text-primary hover:shadow-premium rounded-xl transition-all">
                                            <span class="material-symbols-outlined text-lg font-bold">edit</span>
                                        </button>
                                        <button class="size-10 flex items-center justify-center bg-white dark:bg-slate-800 text-slate-400 hover:text-red-500 hover:shadow-premium rounded-xl transition-all">
                                            <span class="material-symbols-outlined text-lg font-bold">delete</span>
                                        </button>
                                    </div>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
        <div class="px-8 py-6 border-t border-slate-50 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50 flex flex-col sm:flex-row items-center justify-between gap-4">
            <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Mostrando @(records?.Count ?? 0) resultados únicos</span>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest text-slate-400 hover:bg-white transition-all disabled:opacity-30" disabled>Anterior</button>
                <button class="size-10 rounded-xl bg-white dark:bg-slate-800 text-primary font-black shadow-premium flex items-center justify-center">1</button>
                <button class="size-10 rounded-xl hover:bg-white dark:hover:bg-slate-800 text-slate-400 font-black transition-all flex items-center justify-center">2</button>
                <button class="px-4 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest text-slate-400 hover:bg-white transition-all">Próxima</button>
            </div>
        </div>
    </div>
</div>

<RecolhaModal @ref="_modal" OnRecordSaved="LoadData" NavigateOnSuccess="false"/>

@code {
    private RecolhaModal _modal;
    private List<CollectionRecordDto> records;
    private FilterModel filters = new FilterModel();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var query = $"api/residuos/recolhas?dataInicio={filters.StartDate:yyyy-MM-dd}&dataFim={filters.EndDate:yyyy-MM-dd}";
            records = await Http.GetFromJsonAsync<List<CollectionRecordDto>>(query);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            records = new List<CollectionRecordDto>();
        }

        StateHasChanged();
    }

    public class FilterModel
    {
        public DateTime StartDate { get; set; } = DateTime.Now.AddDays(-30);
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(1);
    }

}
