@page "/rotas"
@inject HttpClient Http
@using Elisal.WasteManagement.Application.DTOs
@using Elisal.WasteManagement.Domain.Entities

<PageTitle>SGR Elisal - Gestão de Rotas</PageTitle>

<div class="p-8 space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Gestão de Rotas</h1>
            <p class="text-slate-500 dark:text-slate-400 text-sm">Planeamento e otimização de rotas de recolha</p>
        </div>
        <button @onclick="OpenNewRouteModal" class="px-4 py-2 bg-primary text-white rounded-lg text-sm font-medium hover:bg-primary/90 shadow-sm flex items-center gap-2">
            <span class="material-symbols-outlined">add_road</span>
            Nova Rota
        </button>
    </div>

    <!-- Routes Table -->
    <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm overflow-hidden">
        <table class="w-full">
            <thead class="bg-slate-50 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Nome</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Dia da Semana</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Horário</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">N° Pontos</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Distância (km)</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                @if (routes == null)
                {
                    <tr><td colspan="7" class="px-6 py-8 text-center text-slate-500">Carregando...</td></tr>
                }
                else if (!routes.Any())
                {
                    <tr><td colspan="7" class="px-6 py-8 text-center text-slate-500">Nenhuma rota cadastrada</td></tr>
                }
                else
                {
                    @foreach (var route in routes)
                    {
                        <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900 dark:text-white">@route.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">@route.WeekDay</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">@route.StartTime.ToString("hh\\:mm")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">@route.RoutePoints.Count</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">@route.TotalDistance.ToString("N2")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs font-semibold rounded @(route.IsActive ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                    @(route.IsActive ? "Ativa" : "Inativa")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                <button @onclick='() => Navigation.NavigateTo($"rotas/{route.Id}/executar")' class="text-green-600 hover:text-green-900" title="Executar">
                                    <span class="material-symbols-outlined text-lg">play_circle</span>
                                </button>
                                <button @onclick="() => OpenEditRouteModal(route.Id)" class="text-blue-600 hover:text-blue-900" title="Editar">
                                    <span class="material-symbols-outlined text-lg">edit</span>
                                </button>
                                <button @onclick="() => DeleteRoute(route.Id)" class="text-red-600 hover:text-red-900" title="Eliminar">
                                    <span class="material-symbols-outlined text-lg">delete</span>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<NovaRotaModal @ref="routeModal" OnSaved="LoadData" />

@code {
    [Inject] private NavigationManager Navigation { get; set; }
    private List<RouteDto> routes;
    private NovaRotaModal routeModal;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            routes = await Http.GetFromJsonAsync<List<RouteDto>>("api/rotas");
        }
        catch
        {
            routes = new List<RouteDto>();
        }
    }

    private async Task OpenNewRouteModal()
    {
        await routeModal.Show();
    }

    private async Task OpenEditRouteModal(int routeId)
    {
        await routeModal.Show(routeId);
    }

    private async Task DeleteRoute(int id)
    {
        await Http.DeleteAsync($"api/rotas/{id}");
        await LoadData();
    }
}
