@page "/rotas"
@inject HttpClient Http
@inject NavigationManager Navigation
@using Elisal.WasteManagement.Application.DTOs
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>SGR Elisal - Rotas de Recolha</PageTitle>

<div class="p-6 lg:p-10 space-y-10 animate-fade-in relative overflow-hidden">
    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 bg-primary/5 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6 relative z-10">
        <div>
            <h1 class="text-4xl font-black text-slate-900 dark:text-white leading-tight">
                Logística de <span class="text-gradient-green">Rotas</span>
            </h1>
            <p class="text-slate-500 font-medium mt-2">Planejamento e monitoramento em tempo real do fluxo de recolha.</p>
        </div>
        <AuthorizeView Roles="Admin,Manager">
            <button @onclick="() => _novaRotaModal.Show()" class="btn-vibrant px-8 py-3 flex items-center gap-2 shadow-green-glow">
                <span class="material-symbols-outlined font-bold">add_road</span>
                NOVA ROTA
            </button>
        </AuthorizeView>
    </div>

    <div class="bg-white dark:bg-slate-900 rounded-[2.5rem] shadow-premium border border-slate-50 dark:border-slate-800 overflow-hidden relative z-10">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50 dark:bg-slate-800/50 text-slate-400 text-[10px] font-black uppercase tracking-widest border-b border-slate-100 dark:border-slate-800">
                <tr>
                    <th class="px-8 py-6">Identificação da Rota</th>
                    <th class="px-8 py-6">Cronograma</th>
                    <th class="px-8 py-6 text-center">Pontos</th>
                    <th class="px-8 py-6 text-center">Percurso Est.</th>
                    <th class="px-8 py-6 text-center">Status Operacional</th>
                    <th class="px-8 py-6 text-right">Ações</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-slate-50 dark:divide-slate-800/50 text-sm">
                @if (routes != null)
                {
                    @foreach (var route in routes)
                    {
                        <tr class="hover:bg-primary-subtle/30 transition-colors group">
                            <td class="px-8 py-6">
                                <div class="flex items-center gap-4">
                                    <div class="size-10 rounded-xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 group-hover:bg-primary group-hover:text-white transition-all shadow-inner">
                                        <span class="material-symbols-outlined text-xl">route</span>
                                    </div>
                                    <div>
                                        <p class="font-black text-slate-900 dark:text-white uppercase tracking-tight">@route.Name</p>
                                        <p class="text-[10px] font-bold text-slate-400 italic">@route.Description</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6">
                                <div class="flex flex-col">
                                    <span class="text-xs font-black text-slate-600 dark:text-slate-300 uppercase">@(string.IsNullOrEmpty(route.WeekDay) ? "SOB DEMANDA" : route.WeekDay)</span>
                                    <span class="text-[10px] font-bold text-slate-400 flex items-center gap-1">
                                        <span class="material-symbols-outlined text-xs text-primary">schedule</span> @route.StartTime.ToString(@"hh\:mm")
                                    </span>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-center">
                                <span class="px-3 py-1 rounded-lg bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white font-black text-xs shadow-inner">
                                    @route.RoutePoints.Count
                                </span>
                            </td>
                            <td class="px-8 py-6 text-center font-black text-slate-600 dark:text-slate-300 uppercase text-[10px] tracking-widest">
                                @route.TotalDistance.ToString("N1") <span class="text-[8px] text-slate-400">KM</span>
                            </td>
                            <td class="px-8 py-6 text-center">
                                <div class="flex flex-col items-center gap-2">
                                    <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest @(route.IsActive ? "bg-primary-subtle text-primary border border-primary/10" : "bg-red-50 text-red-500 border border-red-100")">
                                        @(route.IsActive ? "Ativa" : "Bloqueada")
                                    </span>
                                    @if (activeRouteIds.Contains(route.Id))
                                    {
                                        <div class="flex items-center gap-1.5 px-2 py-0.5 rounded-full bg-blue-50 text-blue-600 border border-blue-100 animate-pulse">
                                            <div class="size-1.5 rounded-full bg-blue-500 shadow-[0_0_8px_rgba(59,130,246,0.6)]"></div>
                                            <span class="text-[8px] font-black uppercase tracking-tighter">Em Progresso</span>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="flex items-center justify-end gap-3 translate-x-4 opacity-70 group-hover:opacity-100 group-hover:translate-x-0 transition-all">
                                    <AuthorizeView Roles="Driver">
                                        <button @onclick="() => ExecuteRoute(route.Id)" class="size-9 flex items-center justify-center rounded-xl transition-all shadow-sm @(activeRouteIds.Contains(route.Id) ? "bg-blue-600 text-white hover:bg-blue-700 shadow-blue-500/20" : "bg-primary text-white hover:bg-black shadow-green-glow")" title="Iniciar/Continuar">
                                            <span class="material-symbols-outlined text-xl font-bold">@(activeRouteIds.Contains(route.Id) ? "arrow_forward_ios" : "play_arrow")</span>
                                        </button>
                                    </AuthorizeView>
                                    <AuthorizeView Roles="Admin,Manager">
                                        <button @onclick="() => _novaRotaModal.Show(route.Id)" class="size-9 flex items-center justify-center bg-slate-50 dark:bg-slate-800 text-slate-400 hover:text-primary hover:bg-white dark:hover:bg-slate-700 hover:shadow-premium rounded-xl transition-all" title="Editar">
                                            <span class="material-symbols-outlined text-xl font-bold">edit</span>
                                        </button>
                                        <button @onclick="() => DeleteRoute(route.Id)" class="size-9 flex items-center justify-center bg-slate-50 dark:bg-slate-800 text-slate-400 hover:text-red-500 hover:bg-white dark:hover:bg-slate-700 hover:shadow-premium rounded-xl transition-all" title="Eliminar">
                                            <span class="material-symbols-outlined text-xl font-bold">delete</span>
                                        </button>
                                    </AuthorizeView>
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<Elisal.WasteManagement.UI.Components.Modals.NovaRotaModal @ref="_novaRotaModal" OnSaved="LoadData"/>

@code {
    private List<RouteDto>? routes;
    private List<int> activeRouteIds = new();
    private Elisal.WasteManagement.UI.Components.Modals.NovaRotaModal _novaRotaModal;

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            routes = await Http.GetFromJsonAsync<List<RouteDto>>("api/rotas");
        }
        catch
        {
            routes = new();
        }

        try
        {
            activeRouteIds = await Http.GetFromJsonAsync<List<int>>("api/routeexecution/active-routes") ?? new();
        }
        catch
        {
            activeRouteIds = new();
        }
    }

    private void ExecuteRoute(int routeId) => Navigation.NavigateTo($"/rotas/{routeId}/executar");

    private async Task DeleteRoute(int id)
    {
        await Http.DeleteAsync($"api/rotas/{id}");
        await LoadData();
    }

}
