@using Elisal.WasteManagement.Domain.Entities
@using Elisal.WasteManagement.Application.DTOs
@using System.ComponentModel.DataAnnotations
@using System.ComponentModel
@inject HttpClient Http
@inject IJSRuntime JS

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm transition-opacity" @onclick="Close"></div>
        <div class="flex min-h-full items-center justify-center p-4">
            <div class="relative w-full max-w-6xl transform overflow-hidden rounded-xl bg-white dark:bg-slate-900 text-left shadow-xl transition-all border border-slate-200 dark:border-slate-800">
                <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex justify-between items-center bg-slate-50 dark:bg-slate-800/50">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white" id="modal-title">
                        @(RouteId.HasValue ? "Editar Rota" : "Nova Rota")
                    </h3>
                    <button @onclick="Close" class="text-slate-400 hover:text-slate-500 transition-colors">
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>

                <div class="p-6">
                    @if (showSuccess)
                    {
                        <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">check_circle</span>
                            <span>Rota salva com sucesso!</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">error</span>
                            <span>@errorMessage</span>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator/>

                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                            <!-- Left Column: Form -->
                            <div class="lg:col-span-1 space-y-6">
                                <div class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-4 space-y-4">
                                    <h4 class="font-bold text-slate-900 dark:text-white">Detalhes da Rota</h4>

                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Nome</label>
                                        <InputText @bind-Value="model.Nome" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white p-2.5" placeholder="Ex: Rota Centro"/>
                                        <ValidationMessage For="@(() => model.Nome)" class="text-xs text-red-500"/>
                                    </div>

                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Dia da Semana</label>
                                        <InputText @bind-Value="model.DiaSemana" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white p-2.5" placeholder="Ex: Segunda-Feira"/>
                                        <ValidationMessage For="@(() => model.DiaSemana)" class="text-xs text-red-500"/>
                                    </div>

                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Horário Início</label>
                                        <input type="time" @bind="startTime" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white p-2.5"/>
                                    </div>
                                </div>

                                <!-- Selected Points List -->
                                <div class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-4">
                                    <div class="flex justify-between items-center mb-3">
                                        <h4 class="font-bold text-slate-900 dark:text-white">
                                            Pontos Selecionados (@selectedPointIds.Count)
                                        </h4>
                                        @if (selectedPointIds.Count >= 2)
                                        {
                                            <button type="button" @onclick="OptimizeRoute" class="px-3 py-1 bg-blue-500 text-white rounded-lg text-xs hover:bg-blue-600 flex items-center gap-1">
                                                <span class="material-symbols-outlined text-sm">route</span> Otimizar
                                            </button>
                                        }
                                    </div>

                                    <div class="space-y-2 max-h-80 overflow-y-auto">
                                        @if (selectedPointIds.Count == 0)
                                        {
                                            <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-4">
                                                Clique nos marcadores do mapa para adicionar pontos
                                            </p>
                                        }
                                        else
                                        {
                                            @foreach (var (pointId, index) in selectedPointIds.Select((id, i) => (id, i)))
                                            {
                                                var point = allPoints.FirstOrDefault(p => p.Id == pointId);
                                                if (point != null)
                                                {
                                                    <div class="flex items-center gap-2 p-2 bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700">
                                                        <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary text-white text-xs flex items-center justify-center font-bold">
                                                            @(index + 1)
                                                        </span>
                                                        <div class="flex-1 min-w-0">
                                                            <p class="text-sm font-medium text-slate-900 dark:text-white truncate">@point.Name</p>
                                                            <p class="text-xs text-slate-500 dark:text-slate-400 truncate">@point.Municipality</p>
                                                        </div>
                                                        <button type="button" @onclick="() => RemovePoint(pointId)" class="flex-shrink-0 text-red-500 hover:text-red-700">
                                                            <span class="material-symbols-outlined text-lg">close</span>
                                                        </button>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (totalDistance > 0)
                                    {
                                        <div class="mt-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-100 dark:border-blue-900">
                                            <p class="text-sm font-medium text-blue-900 dark:text-blue-300">
                                                Distância Total: @totalDistance.ToString("N2") km
                                            </p>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Right Column: Map -->
                            <div class="lg:col-span-2">
                                <div class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-4 h-full">
                                    <h4 class="font-bold text-slate-900 dark:text-white mb-3">Mapa Interativo</h4>
                                    <p class="text-sm text-slate-500 dark:text-slate-400 mb-3">
                                        Clique nos marcadores para adicionar/remover pontos da rota
                                    </p>
                                    <div id="route-modal-map" style="height: 600px; border-radius: 0.5rem;"></div>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-slate-200 dark:border-slate-800">
                            <button type="button" @onclick="Close" class="px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800">
                                Cancelar
                            </button>
                            <button type="submit" disabled="@(selectedPointIds.Count == 0)" class="px-4 py-2 rounded-lg bg-primary hover:bg-primary/90 text-white font-medium flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed">
                                <span class="material-symbols-outlined">save</span>
                                Salvar Rota
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnSaved { get; set; }

    public bool IsVisible { get; private set; }
    public int? RouteId { get; private set; }

    private RouteFormModel model = new();
    private List<CollectionPoint> allPoints = new();
    private List<int> selectedPointIds = new();
    private bool showSuccess = false;
    private string errorMessage = "";
    private double totalDistance = 0;
    private TimeOnly startTime;

    public async Task Show(int? routeId = null)
    {
        IsVisible = true;
        RouteId = routeId;
        showSuccess = false;
        errorMessage = "";
        selectedPointIds.Clear();
        totalDistance = 0;

        model = new RouteFormModel();
        startTime = TimeOnly.FromDateTime(DateTime.Now);

        await LoadData();
        StateHasChanged();

        // Initialize map after render
        await Task.Delay(100);
        await InitializeMap();
    }

    public void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task LoadData()
    {
        try
        {
            allPoints = await Http.GetFromJsonAsync<List<CollectionPoint>>("api/pontosrecolha") ?? new();

            if (RouteId.HasValue)
            {
                var route = await Http.GetFromJsonAsync<RouteDto>($"api/rotas/{RouteId.Value}");
                if (route != null)
                {
                    model.Nome = route.Name;
                    model.DiaSemana = route.WeekDay;
                    startTime = TimeOnly.FromTimeSpan(route.StartTime);

                    selectedPointIds = route.RoutePoints
                        .OrderBy(rp => rp.SequenceOrder)
                        .Select(rp => rp.CollectionPointId)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar dados: {ex.Message}";
        }
    }

    private async Task InitializeMap()
    {
        try
        {
            await JS.InvokeVoidAsync("mapFunctions.initMap", "route-modal-map", -8.83833, 13.2344, 11);
            await JS.InvokeVoidAsync("mapFunctions.setHelper", "route-modal-map", DotNetObjectReference.Create(this));
            await UpdateMapDisplay();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing map: {ex.Message}");
        }
    }

    private async Task UpdateMapDisplay()
    {
        try
        {
            await JS.InvokeVoidAsync("mapFunctions.updateRouteWithOrder", "route-modal-map", allPoints, selectedPointIds);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating map: {ex.Message}");
        }
    }

    [JSInvokable]
    public Task OnMapClickInternal(double lat, double lng)
    {
        // Clicks no fundo do mapa são ignorados neste contexto
        return Task.CompletedTask;
    }

    [JSInvokable]
    public async Task OnPointSelected(int pointId)
    {
        if (selectedPointIds.Contains(pointId))
        {
            selectedPointIds.Remove(pointId);
        }
        else
        {
            selectedPointIds.Add(pointId);
        }

        await UpdateMapDisplay();
        StateHasChanged();
    }

    private async Task RemovePoint(int pointId)
    {
        selectedPointIds.Remove(pointId);
        await UpdateMapDisplay();
        StateHasChanged();
    }

    private async Task OptimizeRoute()
    {
        if (selectedPointIds.Count < 2) return;

        try
        {
            var response = await Http.PostAsJsonAsync("api/rotas/otimizar", selectedPointIds.ToArray());

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<OptimizationResult>();
                if (result != null)
                {
                    totalDistance = result.DistanciaTotal;
                    selectedPointIds = result.Pontos.Select(p => p.Id).ToList();
                    await UpdateMapDisplay();
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao otimizar rota: {ex.Message}";
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (selectedPointIds.Count == 0)
            {
                errorMessage = "Selecione pelo menos um ponto de recolha.";
                return;
            }

            var dto = new
            {
                Nome = model.Nome,
                Descricao = "",
                DiaSemana = model.DiaSemana,
                HorarioInicio = startTime,
                PontoIds = selectedPointIds.ToArray()
            };

            HttpResponseMessage response;
            if (RouteId.HasValue)
            {
                response = await Http.PutAsJsonAsync($"api/rotas/{RouteId.Value}", dto);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/rotas", dto);
            }

            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                StateHasChanged();
                await Task.Delay(1000);
                Close();
                await OnSaved.InvokeAsync();
            }
            else
            {
                errorMessage = "Erro ao salvar rota.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
    }

    public class RouteFormModel
    {
        [Required(ErrorMessage = "Nome é obrigatório")]
        [MaxLength(150)]
        public string Nome { get; set; } = "";

        [Required(ErrorMessage = "Dia da semana é obrigatório")]
        [MaxLength(20)]
        public string DiaSemana { get; set; } = "";
    }

    public class OptimizationResult
    {
        public List<CollectionPointDto> Pontos { get; set; } = new();
        public double DistanciaTotal { get; set; }
    }

}
