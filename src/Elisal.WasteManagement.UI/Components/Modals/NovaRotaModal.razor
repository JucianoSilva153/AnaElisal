@using Elisal.WasteManagement.Domain.Entities
@using Elisal.WasteManagement.Application.DTOs
@using System.ComponentModel.DataAnnotations
@using System.ComponentModel
@inject HttpClient Http
@inject IJSRuntime JS

@if (IsVisible)
{
    <div class="fixed inset-0 z-[100] overflow-y-auto animate-fade-in" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-md transition-opacity" @onclick="Close"></div>
        <div class="flex min-h-full items-center justify-center p-4 sm:p-6 relative z-10">
            <div class="relative w-full max-w-6xl transform overflow-hidden rounded-[2.5rem] bg-white dark:bg-slate-900 text-left shadow-premium transition-all border border-slate-50 dark:border-slate-800">
                <div class="px-8 py-6 border-b border-slate-50 dark:border-slate-800 flex justify-between items-center bg-slate-50/50 dark:bg-slate-800/50">
                    <div class="flex items-center gap-3">
                        <div class="size-10 rounded-xl bg-primary text-white flex items-center justify-center shadow-green-glow">
                            <span class="material-symbols-outlined font-bold">map</span>
                        </div>
                        <h3 class="text-xl font-black text-slate-900 dark:text-white uppercase tracking-tight" id="modal-title">
                            @(RouteId.HasValue ? "Otimizar" : "Engenharia de") <span class="text-gradient-green">Rota</span>
                        </h3>
                    </div>
                    <button @onclick="Close" class="size-10 rounded-xl flex items-center justify-center text-slate-400 hover:text-red-500 hover:bg-red-50 transition-all">
                        <span class="material-symbols-outlined font-bold">close</span>
                    </button>
                </div>

                <div class="p-8">
                    @if (showSuccess)
                    {
                        <div class="mb-8 p-5 rounded-2xl bg-primary/10 border border-primary/20 text-primary flex items-center gap-4 animate-bounce-subtle">
                            <span class="material-symbols-outlined font-bold">check_circle</span>
                            <span class="font-black uppercase tracking-widest text-[10px]">Logística de rota sincronizada com sucesso!</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mb-8 p-5 rounded-2xl bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800 text-red-600 flex items-center gap-4">
                            <span class="material-symbols-outlined font-bold">error</span>
                            <span class="font-black uppercase tracking-widest text-[10px]">@errorMessage</span>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator/>

                        <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
                            <!-- Left Column: Form -->
                            <div class="lg:col-span-4 space-y-8">
                                <div class="bg-slate-50 dark:bg-slate-800/50 rounded-3xl p-6 space-y-6 border border-slate-100 dark:border-slate-800 shadow-inner">
                                    <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest flex items-center gap-2">
                                        <span class="size-1.5 rounded-full bg-primary"></span>
                                        Parâmetros da Rota
                                    </h4>

                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Identificador</label>
                                        <InputText @bind-Value="model.Nome" class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all" placeholder="Ex: ROTA SUL A1"/>
                                        <ValidationMessage For="@(() => model.Nome)" class="text-[10px] font-bold text-red-500 italic mt-1"/>
                                    </div>

                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Ciclo Semanal</label>
                                        <InputText @bind-Value="model.DiaSemana" class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all" placeholder="Ex: SEGUNDA, QUARTA"/>
                                        <ValidationMessage For="@(() => model.DiaSemana)" class="text-[10px] font-bold text-red-500 italic mt-1"/>
                                    </div>

                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Janela de Início</label>
                                        <input type="time" @bind="startTime" class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all"/>
                                    </div>
                                </div>

                                <!-- Selected Points List -->
                                <div class="bg-slate-50 dark:bg-slate-800/50 rounded-3xl p-6 border border-slate-100 dark:border-slate-800 shadow-inner">
                                    <div class="flex justify-between items-center mb-6">
                                        <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest flex items-center gap-2">
                                            <span class="size-1.5 rounded-full bg-blue-500"></span>
                                            Waypoint (@selectedPointIds.Count)
                                        </h4>
                                        @if (selectedPointIds.Count >= 2)
                                        {
                                            <button type="button" @onclick="OptimizeRoute" class="px-4 py-1.5 bg-blue-600 text-white rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-blue-700 transition-all flex items-center gap-2 shadow-lg shadow-blue-500/20">
                                                <span class="material-symbols-outlined text-sm font-bold">insights</span> Otimizar
                                            </button>
                                        }
                                    </div>

                                    <div class="space-y-3 max-h-80 overflow-y-auto pr-2 custom-scrollbar">
                                        @if (selectedPointIds.Count == 0)
                                        {
                                            <div class="flex flex-col items-center justify-center py-10 text-center space-y-3">
                                                <div class="size-12 rounded-2xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-300">
                                                    <span class="material-symbols-outlined text-3xl">location_on</span>
                                                </div>
                                                <p class="text-[10px] font-bold text-slate-400 uppercase leading-relaxed">Selecione os marcadores no mapa<br/>para traçar o percurso</p>
                                            </div>
                                        }
                                        else
                                        {
                                            @foreach (var (pointId, index) in selectedPointIds.Select((id, i) => (id, i)))
                                            {
                                                var point = allPoints.FirstOrDefault(p => p.Id == pointId);
                                                if (point != null)
                                                {
                                                    <div class="flex items-center gap-3 p-3 bg-white dark:bg-slate-800 rounded-2xl border border-slate-100 dark:border-slate-700 shadow-sm group">
                                                        <span class="flex-shrink-0 size-7 rounded-full bg-primary text-white text-[10px] flex items-center justify-center font-black shadow-green-glow">
                                                            @(index + 1)
                                                        </span>
                                                        <div class="flex-1 min-w-0">
                                                            <p class="text-xs font-black text-slate-900 dark:text-white uppercase tracking-tight truncate">@point.Name</p>
                                                            <p class="text-[8px] font-bold text-slate-400 uppercase tracking-widest truncate">@point.Municipality</p>
                                                        </div>
                                                        <button type="button" @onclick="() => RemovePoint(pointId)" class="flex-shrink-0 size-8 flex items-center justify-center text-slate-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-all">
                                                            <span class="material-symbols-outlined text-lg font-bold">close</span>
                                                        </button>
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>

                                    @if (totalDistance > 0)
                                    {
                                        <div class="mt-6 p-4 bg-primary/5 dark:bg-primary/10 rounded-2xl border border-primary/10">
                                            <div class="flex items-center justify-between">
                                                <span class="text-[10px] font-black text-primary uppercase tracking-widest">Extensão Estimada</span>
                                                <span class="text-xs font-black text-primary">
                                                    @totalDistance.ToString("N2") <span class="text-[8px]">KM</span>
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Right Column: Map -->
                            <div class="lg:col-span-8 h-full min-h-[500px]">
                                <div class="bg-white dark:bg-slate-900 rounded-[2rem] p-4 h-full border border-slate-50 dark:border-slate-800 shadow-premium flex flex-col relative overflow-hidden">
                                    <div class="absolute top-6 left-6 z-[1] p-4 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md rounded-2xl border border-white dark:border-slate-800 shadow-xl max-w-xs pointer-events-none">
                                        <h4 class="text-[10px] font-black text-slate-900 dark:text-white uppercase tracking-widest mb-1">Visualização Geográfica</h4>
                                        <p class="text-[9px] font-medium text-slate-500 leading-relaxed italic">Ative as coordenadas clicando nos marcos operacionais destacados no terreno.</p>
                                    </div>
                                    <div id="route-modal-map" class="flex-1 w-full h-full rounded-3xl overflow-hidden grayscale-[0.2] brightness-[1.05] contrast-[1.1] shadow-inner"></div>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center justify-end gap-4 pt-8 mt-10 border-t border-slate-50 dark:border-slate-800">
                            <button type="button" @onclick="Close"
                                    class="px-8 py-3 rounded-2xl font-black uppercase tracking-widest text-[10px] text-slate-400 hover:text-slate-600 hover:bg-slate-100 transition-all">
                                Cancelar
                            </button>
                            <button type="submit" disabled="@(selectedPointIds.Count == 0)" class="btn-vibrant px-12 py-3 flex items-center gap-3 shadow-green-glow disabled:opacity-50 disabled:grayscale transition-all">
                                <span class="material-symbols-outlined font-bold">verified</span>
                                <span class="font-black uppercase tracking-widest text-[10px]">CONSOLIDAR LOGÍSTICA</span>
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnSaved { get; set; }

    public bool IsVisible { get; private set; }
    public int? RouteId { get; private set; }

    private RouteFormModel model = new();
    private List<CollectionPoint> allPoints = new();
    private List<int> selectedPointIds = new();
    private bool showSuccess = false;
    private string errorMessage = "";
    private double totalDistance = 0;
    private TimeOnly startTime;

    public async Task Show(int? routeId = null)
    {
        IsVisible = true;
        RouteId = routeId;
        showSuccess = false;
        errorMessage = "";
        selectedPointIds.Clear();
        totalDistance = 0;

        model = new RouteFormModel();
        startTime = TimeOnly.FromDateTime(DateTime.Now);

        await LoadData();
        StateHasChanged();

        // Initialize map after render
        await Task.Delay(100);
        await InitializeMap();
    }

    public void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task LoadData()
    {
        try
        {
            allPoints = await Http.GetFromJsonAsync<List<CollectionPoint>>("api/pontosrecolha") ?? new();

            if (RouteId.HasValue)
            {
                var route = await Http.GetFromJsonAsync<RouteDto>($"api/rotas/{RouteId.Value}");
                if (route != null)
                {
                    model.Nome = route.Name;
                    model.DiaSemana = route.WeekDay;
                    startTime = TimeOnly.FromTimeSpan(route.StartTime);

                    selectedPointIds = route.RoutePoints
                        .OrderBy(rp => rp.SequenceOrder)
                        .Select(rp => rp.CollectionPointId)
                        .ToList();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar dados: {ex.Message}";
        }
    }

    private async Task InitializeMap()
    {
        try
        {
            await JS.InvokeVoidAsync("mapFunctions.initMap", "route-modal-map", -8.83833, 13.2344, 11);
            await JS.InvokeVoidAsync("mapFunctions.setHelper", "route-modal-map", DotNetObjectReference.Create(this));
            await UpdateMapDisplay();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing map: {ex.Message}");
        }
    }

    private async Task UpdateMapDisplay()
    {
        try
        {
            await JS.InvokeVoidAsync("mapFunctions.updateRouteWithOrder", "route-modal-map", allPoints, selectedPointIds);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating map: {ex.Message}");
        }
    }

    [JSInvokable]
    public Task OnMapClickInternal(double lat, double lng)
    {
        // Clicks no fundo do mapa são ignorados neste contexto
        return Task.CompletedTask;
    }

    [JSInvokable]
    public async Task OnPointSelected(int pointId)
    {
        if (selectedPointIds.Contains(pointId))
        {
            selectedPointIds.Remove(pointId);
        }
        else
        {
            selectedPointIds.Add(pointId);
        }

        await UpdateMapDisplay();
        StateHasChanged();
    }

    private async Task RemovePoint(int pointId)
    {
        selectedPointIds.Remove(pointId);
        await UpdateMapDisplay();
        StateHasChanged();
    }

    private async Task OptimizeRoute()
    {
        if (selectedPointIds.Count < 2) return;

        try
        {
            var response = await Http.PostAsJsonAsync("api/rotas/otimizar", selectedPointIds.ToArray());

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<OptimizationResult>();
                if (result != null)
                {
                    totalDistance = result.DistanciaTotal;
                    selectedPointIds = result.Pontos.Select(p => p.Id).ToList();
                    await UpdateMapDisplay();
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao otimizar rota: {ex.Message}";
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (selectedPointIds.Count == 0)
            {
                errorMessage = "Selecione pelo menos um ponto de recolha.";
                return;
            }

            var dto = new
            {
                Nome = model.Nome,
                Descricao = "",
                DiaSemana = model.DiaSemana,
                HorarioInicio = startTime,
                PontoIds = selectedPointIds.ToArray()
            };

            HttpResponseMessage response;
            if (RouteId.HasValue)
            {
                response = await Http.PutAsJsonAsync($"api/rotas/{RouteId.Value}", dto);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/rotas", dto);
            }

            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                StateHasChanged();
                await Task.Delay(1000);
                Close();
                await OnSaved.InvokeAsync();
            }
            else
            {
                errorMessage = "Erro ao salvar rota.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
    }

    public class RouteFormModel
    {
        [Required(ErrorMessage = "Nome é obrigatório")]
        [MaxLength(150)]
        public string Nome { get; set; } = "";

        [Required(ErrorMessage = "Dia da semana é obrigatório")]
        [MaxLength(20)]
        public string DiaSemana { get; set; } = "";
    }

    public class OptimizationResult
    {
        public List<CollectionPointDto> Pontos { get; set; } = new();
        public double DistanciaTotal { get; set; }
    }

}
