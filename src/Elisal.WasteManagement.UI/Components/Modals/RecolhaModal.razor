@using Elisal.WasteManagement.Domain.Entities
@using System.ComponentModel.DataAnnotations
@using Elisal.WasteManagement.Application.DTOs
@using System.Security.Claims
@inject HttpClient Http
@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm transition-opacity" @onclick="Close"></div>

        <div class="flex min-h-full items-center justify-center p-4">
            <div
                class="relative w-full max-w-2xl transform overflow-hidden rounded-xl bg-white dark:bg-slate-900 text-left shadow-xl transition-all border border-slate-200 dark:border-slate-800">
                <!-- Header -->
                <div
                    class="px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex justify-between items-center bg-slate-50 dark:bg-slate-800/50">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white" id="modal-title">Registar Nova Recolha</h3>
                    <button @onclick="Close" class="text-slate-400 hover:text-slate-500 transition-colors">
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>

                <!-- Body -->
                <div class="p-6">
                    @if (showSuccess)
                    {
                        <div
                            class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">check_circle</span>
                            <span>Recolha registada com sucesso!</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">error</span>
                            <span>@errorMessage</span>
                        </div>
                    }

                    <EditForm Model="@collectionModel" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator/>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <!-- Data e Hora -->
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                                    Data e
                                    Hora
                                </label>
                                <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="collectionModel.DateTime"
                                           class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary"/>
                                <ValidationMessage For="@(() => collectionModel.DateTime)" class="text-xs text-red-500"/>
                            </div>

                            <!-- Quantidade -->
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                                    Quantidade
                                    (Kg)
                                </label>
                                <InputNumber @bind-Value="collectionModel.AmountKg"
                                             class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary"/>
                                <ValidationMessage For="@(() => collectionModel.AmountKg)" class="text-xs text-red-500"/>
                            </div>

                            <!-- Ponto de Recolha -->
                            <div class="space-y-2 md:col-span-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">
                                    Ponto de
                                    Recolha
                                </label>
                                <InputSelect @bind-Value="collectionModel.CollectionPointId"
                                             class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary">
                                    <option value="0">Selecione um ponto...</option>
                                    @if (points != null)
                                    {
                                        @foreach (var p in points)
                                        {
                                            <option value="@p.Id">@p.Name</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => collectionModel.CollectionPointId)"
                                                   class="text-xs text-red-500"/>
                            </div>

                            <!-- Tipo de Residuo -->
                            <div class="space-y-2 md:col-span-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Tipos de Resíduos</label>
                                <div class="grid grid-cols-2 gap-3 p-4 bg-slate-50 dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700">
                                    @if (wasteTypes != null)
                                    {
                                        @foreach (var w in wasteTypes)
                                        {
                                            <label class="flex items-center gap-3 p-2 rounded-lg hover:bg-white dark:hover:bg-slate-700 transition-colors cursor-pointer group">
                                                <input type="checkbox" checked="@collectionModel.WasteTypeIds.Contains(w.Id)"
                                                       @onchange='(e) => ToggleWasteType(w.Id, (bool)e.Value)'
                                                       class="w-4 h-4 rounded text-primary focus:ring-primary border-slate-300 dark:border-slate-600 dark:bg-slate-800"/>
                                                <div class="flex items-center gap-2">
                                                    <div class="size-3 rounded-full" style="background-color: @w.ColorCode"></div>
                                                    <span class="text-sm text-slate-700 dark:text-slate-300 group-hover:text-primary transition-colors">@w.Name</span>
                                                </div>
                                            </label>
                                        }
                                    }
                                </div>
                                <ValidationMessage For="@(() => collectionModel.WasteTypeIds)" class="text-xs text-red-500"/>
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="space-y-2 mb-6">
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Observações</label>
                            <InputTextArea @bind-Value="collectionModel.Notes" rows="3"
                                           class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary"/>
                        </div>

                        <!-- Actions -->
                        <div
                            class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-800">
                            <button type="button" @onclick="Close"
                                    class="px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800 font-medium transition-colors">
                                Cancelar
                            </button>
                            <button type="submit"
                                    class="px-4 py-2 rounded-lg bg-primary hover:bg-primary/90 text-white font-medium shadow-sm transition-colors flex items-center gap-2">
                                <span class="material-symbols-outlined">save</span>
                                Salvar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnRecordSaved { get; set; }
    [Parameter] public bool NavigateOnSuccess { get; set; } = false;

    public bool IsVisible { get; private set; }
    private CollectionRecordModel collectionModel = new();
    private List<CollectionPoint> points = new();
    private List<WasteType> wasteTypes = new();
    private bool showSuccess = false;
    private string errorMessage = "";

    public void Show()
    {
        IsVisible = true;
        collectionModel = new CollectionRecordModel(); // Reset
        showSuccess = false;
        errorMessage = "";
        StateHasChanged();
        LoadPoints();
    }

    public void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async void LoadPoints()
    {
        try
        {
            if (points == null || points.Count == 0)
                points = await Http.GetFromJsonAsync<List<CollectionPoint>>("api/pontosRecolha") ?? new();

            if (wasteTypes == null || wasteTypes.Count == 0)
                wasteTypes = await Http.GetFromJsonAsync<List<WasteType>>("api/residuos/tipos") ?? new();
            StateHasChanged();
        }
        catch
        {
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState is null)
                return;

            var record = new CreateCollectionRecordDto
            {
                DateTime = collectionModel.DateTime,
                AmountKg = collectionModel.AmountKg,
                CollectionPointId = collectionModel.CollectionPointId,
                Notes = collectionModel.Notes,
                UserId = Convert.ToInt32(authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value ?? "0"),
                WasteTypeId = collectionModel.WasteTypeIds.FirstOrDefault(),
                WasteTypeIds = collectionModel.WasteTypeIds
            };

            Console.WriteLine("Id: " + record.UserId);

            var response = await Http.PostAsJsonAsync("api/residuos/recolha", record);

            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                StateHasChanged();

                await Task.Delay(1000); // 1s delay
                Close();

                if (NavigateOnSuccess)
                {
                    Navigation.NavigateTo("/residuos", forceLoad: true);
                }
                else
                {
                    await OnRecordSaved.InvokeAsync();
                }
            }
            else
            {
                errorMessage = "Erro ao salvar. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
    }

    public class CollectionRecordModel
    {
        [Required] public DateTime DateTime { get; set; } = DateTime.Now;

        [Required]
        [Range(1, int.MaxValue, ErrorMessage = "Selecione um ponto.")]
        public int CollectionPointId { get; set; }

        [MinLength(1, ErrorMessage = "Selecione pelo menos um tipo de resíduo.")]
        public List<int> WasteTypeIds { get; set; } = new();

        [Required]
        [Range(0.1, 100000, ErrorMessage = "Qtd deve ser maior que 0.")]
        public double AmountKg { get; set; }

        public string Notes { get; set; } = string.Empty;
    }

    private void ToggleWasteType(int id, bool isChecked)
    {
        if (isChecked)
        {
            if (!collectionModel.WasteTypeIds.Contains(id))
                collectionModel.WasteTypeIds.Add(id);
        }
        else
        {
            collectionModel.WasteTypeIds.Remove(id);
        }
    }

}