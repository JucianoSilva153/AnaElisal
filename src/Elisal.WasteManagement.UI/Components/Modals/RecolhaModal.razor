@using Elisal.WasteManagement.Domain.Entities
@using System.ComponentModel.DataAnnotations
@using Elisal.WasteManagement.Application.DTOs
@using System.Security.Claims
@inject HttpClient Http
@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="fixed inset-0 z-[100] overflow-y-auto animate-fade-in" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-md transition-opacity" @onclick="Close"></div>

        <div class="flex min-h-full items-center justify-center p-4 sm:p-6 relative z-10">
            <div class="relative w-full max-w-2xl transform overflow-hidden rounded-[2.5rem] bg-white dark:bg-slate-900 text-left shadow-premium transition-all border border-slate-50 dark:border-slate-800">
                <!-- Header -->
                <div class="px-8 py-6 border-b border-slate-50 dark:border-slate-800 flex justify-between items-center bg-slate-50/50 dark:bg-slate-800/50">
                    <div class="flex items-center gap-3">
                        <div class="size-10 rounded-xl bg-primary text-white flex items-center justify-center shadow-green-glow">
                            <span class="material-symbols-outlined font-bold">event_note</span>
                        </div>
                        <h3 class="text-xl font-black text-slate-900 dark:text-white uppercase tracking-tight" id="modal-title">Registo de <span class="text-gradient-green">Recolha</span></h3>
                    </div>
                    <button @onclick="Close" class="size-10 rounded-xl flex items-center justify-center text-slate-400 hover:text-red-500 hover:bg-red-50 transition-all">
                        <span class="material-symbols-outlined font-bold">close</span>
                    </button>
                </div>

                <!-- Body -->
                <div class="p-8">
                    @if (showSuccess)
                    {
                        <div class="mb-8 p-5 rounded-2xl bg-primary/10 border border-primary/20 text-primary flex items-center gap-4 animate-bounce-subtle">
                            <span class="material-symbols-outlined font-bold">check_circle</span>
                            <span class="font-black uppercase tracking-widest text-[10px]">Recolha sincronizada com sucesso!</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mb-8 p-5 rounded-2xl bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800 text-red-600 flex items-center gap-4">
                            <span class="material-symbols-outlined font-bold">error</span>
                            <span class="font-black uppercase tracking-widest text-[10px]">@errorMessage</span>
                        </div>
                    }

                    <EditForm Model="@collectionModel" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator/>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                            <!-- Data e Hora -->
                            <div class="space-y-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Cronometria do Evento</label>
                                <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="collectionModel.DateTime"
                                           class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all"/>
                                <ValidationMessage For="@(() => collectionModel.DateTime)" class="text-[10px] font-bold text-red-500 italic mt-1"/>
                            </div>

                            <!-- Quantidade -->
                            <div class="space-y-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Volume de Resíduos (KG)</label>
                                <InputNumber @bind-Value="collectionModel.AmountKg"
                                             class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all shadow-inner"/>
                                <ValidationMessage For="@(() => collectionModel.AmountKg)" class="text-[10px] font-bold text-red-500 italic mt-1"/>
                            </div>

                            <!-- Ponto de Recolha -->
                            <div class="space-y-2 md:col-span-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Unidade de Recolha Origem</label>
                                <InputSelect @bind-Value="collectionModel.CollectionPointId"
                                             class="w-full h-12 px-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all appearance-none cursor-pointer">
                                    <option value="0">SELECIONE A UNIDADE OPERACIONAL...</option>
                                    @if (points != null)
                                    {
                                        @foreach (var p in points)
                                        {
                                            <option value="@p.Id">@p.Name.ToUpper()</option>
                                        }
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => collectionModel.CollectionPointId)"
                                                   class="text-[10px] font-bold text-red-500 italic mt-1"/>
                            </div>

                            <!-- Tipo de Residuo -->
                            <div class="space-y-4 md:col-span-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Classificação de Resíduos</label>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-6 bg-slate-50 dark:bg-slate-800 rounded-[1.5rem] border border-slate-100 dark:border-slate-700 shadow-inner">
                                    @if (wasteTypes != null)
                                    {
                                        @foreach (var w in wasteTypes)
                                        {
                                            <label class="flex items-center gap-4 p-3 rounded-xl bg-white dark:bg-slate-900 border border-transparent hover:border-primary/20 hover:shadow-premium transition-all cursor-pointer group">
                                                <input type="checkbox" checked="@collectionModel.WasteTypeIds.Contains(w.Id)"
                                                       @onchange='(e) => ToggleWasteType(w.Id, (bool)e.Value)'
                                                       class="size-5 rounded-lg text-primary focus:ring-primary border-slate-200 dark:border-slate-700 dark:bg-slate-800 cursor-pointer"/>
                                                <div class="flex items-center gap-3">
                                                    <div class="size-4 rounded-full border-2 border-white shadow-sm" style="background-color: @w.ColorCode"></div>
                                                    <span class="text-xs font-black text-slate-600 dark:text-slate-300 uppercase tracking-tight group-hover:text-primary">@w.Name</span>
                                                </div>
                                            </label>
                                        }
                                    }
                                </div>
                                <ValidationMessage For="@(() => collectionModel.WasteTypeIds)" class="text-[10px] font-bold text-red-500 italic mt-1"/>
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="space-y-2 mb-8">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Observações Técnicas</label>
                            <InputTextArea @bind-Value="collectionModel.Notes" rows="3" placeholder="Informações adicionais sobre o estado da recolha..."
                                           class="w-full p-5 rounded-2xl border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary font-bold transition-all shadow-inner"/>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center justify-end gap-4 pt-6 mt-2 border-t border-slate-50 dark:border-slate-800">
                            <button type="button" @onclick="Close" disabled="@_isSaving"
                                    class="px-8 py-3 rounded-2xl font-black uppercase tracking-widest text-[10px] text-slate-400 hover:text-slate-600 hover:bg-slate-100 transition-all disabled:opacity-50">
                                Abortar
                            </button>
                            <button type="submit" disabled="@_isSaving"
                                    class="btn-vibrant px-12 py-3 flex items-center gap-3 shadow-green-glow disabled:opacity-50 min-w-[180px] justify-center">
                                @if (_isSaving)
                                {
                                    <div class="size-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                                    <span class="font-black uppercase tracking-widest text-[10px]">Sincronizando...</span>
                                }
                                else
                                {
                                    <span class="material-symbols-outlined font-bold">cloud_upload</span>
                                    <span class="font-black uppercase tracking-widest text-[10px]">FINALIZAR REGISTO</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnRecordSaved { get; set; }
    [Parameter] public bool NavigateOnSuccess { get; set; } = false;

    public bool IsVisible { get; private set; }
    private CollectionRecordModel collectionModel = new();
    private List<CollectionPoint> points = new();
    private List<WasteType> wasteTypes = new();
    private bool showSuccess = false;
    private string errorMessage = "";
    private bool _isSaving = false;

    public void Show()
    {
        IsVisible = true;
        collectionModel = new CollectionRecordModel(); // Reset
        showSuccess = false;
        errorMessage = "";
        _isSaving = false;
        StateHasChanged();
        LoadPoints();
    }

    public void Close()
    {
        if (_isSaving) return;
        IsVisible = false;
        StateHasChanged();
    }

    private async void LoadPoints()
    {
        try
        {
            if (points == null || points.Count == 0)
                points = await Http.GetFromJsonAsync<List<CollectionPoint>>("api/pontosRecolha") ?? new();

            if (wasteTypes == null || wasteTypes.Count == 0)
                wasteTypes = await Http.GetFromJsonAsync<List<WasteType>>("api/residuos/tipos") ?? new();
            StateHasChanged();
        }
        catch
        {
        }
    }

    private async Task HandleSubmit()
    {
        if (_isSaving) return;

        try
        {
            _isSaving = true;
            errorMessage = "";
            StateHasChanged();

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState is null)
                return;

            var record = new CreateCollectionRecordDto
            {
                DateTime = collectionModel.DateTime,
                AmountKg = collectionModel.AmountKg,
                CollectionPointId = collectionModel.CollectionPointId,
                Notes = collectionModel.Notes,
                UserId = Convert.ToInt32(authState.User.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value ?? "0"),
                WasteTypeId = collectionModel.WasteTypeIds.FirstOrDefault(),
                WasteTypeIds = collectionModel.WasteTypeIds
            };

            var response = await Http.PostAsJsonAsync("api/residuos/recolha", record);

            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                StateHasChanged();

                await Task.Delay(1000); // 1s delay
                Close();

                if (NavigateOnSuccess)
                {
                    Navigation.NavigateTo("/residuos", forceLoad: true);
                }
                else
                {
                    await OnRecordSaved.InvokeAsync();
                }
            }
            else
            {
                errorMessage = "Erro ao salvar. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    public class CollectionRecordModel
    {
        [Required] public DateTime DateTime { get; set; } = DateTime.Now;

        [Required]
        [Range(1, int.MaxValue, ErrorMessage = "Selecione um ponto.")]
        public int CollectionPointId { get; set; }

        [MinLength(1, ErrorMessage = "Selecione pelo menos um tipo de resíduo.")]
        public List<int> WasteTypeIds { get; set; } = new();

        [Required]
        [Range(0.1, 100000, ErrorMessage = "Qtd deve ser maior que 0.")]
        public double AmountKg { get; set; }

        public string Notes { get; set; } = string.Empty;
    }

    private void ToggleWasteType(int id, bool isChecked)
    {
        if (isChecked)
        {
            if (!collectionModel.WasteTypeIds.Contains(id))
                collectionModel.WasteTypeIds.Add(id);
        }
        else
        {
            collectionModel.WasteTypeIds.Remove(id);
        }
    }

}