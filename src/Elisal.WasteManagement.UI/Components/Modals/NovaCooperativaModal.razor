@using Elisal.WasteManagement.Domain.Entities
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm transition-opacity" @onclick="Close"></div>
        <div class="flex min-h-full items-center justify-center p-4">
            <div class="relative w-full max-w-2xl transform overflow-hidden rounded-xl bg-white dark:bg-slate-900 text-left shadow-xl transition-all border border-slate-200 dark:border-slate-800">
                <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-800 flex justify-between items-center bg-slate-50 dark:bg-slate-800/50">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white" id="modal-title">Nova Cooperativa</h3>
                    <button @onclick="Close" class="text-slate-400 hover:text-slate-500 transition-colors">
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>
                
                <div class="p-6">
                    @if (showSuccess)
                    {
                        <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200 text-green-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">check_circle</span>
                            <span>Cooperativa registada com sucesso!</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700 flex items-center gap-3">
                            <span class="material-symbols-outlined">error</span>
                            <span>@errorMessage</span>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Nome da Cooperativa</label>
                                <InputText @bind-Value="model.Name" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                                <ValidationMessage For="@(() => model.Name)" class="text-xs text-red-500" />
                            </div>

                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Responsável / Contacto</label>
                                <InputText @bind-Value="model.Contact" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                                <ValidationMessage For="@(() => model.Contact)" class="text-xs text-red-500" />
                            </div>

                            <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Email</label>
                                <InputText @bind-Value="model.Email" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                                <ValidationMessage For="@(() => model.Email)" class="text-xs text-red-500" />
                            </div>

                             <div class="space-y-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Endereço</label>
                                <InputText @bind-Value="model.Address" class="w-full rounded-lg border-slate-300 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary" />
                            </div>
                        </div>
                        
                        <div class="space-y-2 mb-6">
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Resíduos Aceites</label>
                            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                                @if (wasteTypes != null)
                                {
                                    @foreach (var type in wasteTypes)
                                    {
                                        <label class="flex items-center gap-2 p-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 cursor-pointer hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
                                            <input type="checkbox" @onchange="@(e => ToggleWasteType(type.Name, e.Value))" checked="@selectedWasteTypes.Contains(type.Name)" class="rounded border-slate-300 text-primary focus:ring-primary" />
                                            <span class="text-sm font-medium text-slate-700 dark:text-slate-300">@type.Name</span>
                                        </label>
                                    }
                                }
                            </div>
                            <p class="text-xs text-slate-400">Selecione os tipos de resíduos que a cooperativa processa.</p>
                        </div>

                        <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-800">
                            <button type="button" @onclick="Close" class="px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300">Cancelar</button>
                            <button type="submit" class="px-4 py-2 rounded-lg bg-primary hover:bg-primary/90 text-white font-medium flex items-center gap-2">
                                <span class="material-symbols-outlined">save</span> Salvar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnSaved { get; set; }
    public bool IsVisible { get; private set; }
    
    private CooperativeModel model = new();
    private List<WasteType> wasteTypes;
    private HashSet<string> selectedWasteTypes = new();
    private bool showSuccess = false;
    private string errorMessage = "";

    public void Show() 
    {
        IsVisible = true;
        model = new CooperativeModel();
        selectedWasteTypes.Clear();
        showSuccess = false;
        errorMessage = "";
        LoadWasteTypes();
        StateHasChanged();
    }

    public void Close() 
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async void LoadWasteTypes()
    {
        try { wasteTypes = await Http.GetFromJsonAsync<List<WasteType>>("api/residuos/tipos") ?? new(); StateHasChanged(); } catch { }
    }

    private void ToggleWasteType(string type, object isChecked)
    {
        if ((bool)isChecked) selectedWasteTypes.Add(type);
        else selectedWasteTypes.Remove(type);
    }

    private async Task HandleSubmit()
    {
        try
        {
            model.AcceptedWasteTypes = string.Join(",", selectedWasteTypes);
            var response = await Http.PostAsJsonAsync("api/cooperativas", model);
            
            if (response.IsSuccessStatusCode)
            {
                showSuccess = true;
                StateHasChanged();
                await Task.Delay(1000);
                Close();
                await OnSaved.InvokeAsync();
            }
            else
            {
                errorMessage = "Erro ao salvar cooperativa.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
    }

    public class CooperativeModel : Cooperative 
    {
        // Re-using Entity as Model for simplicity, or we can use specific DTO
    }
}
